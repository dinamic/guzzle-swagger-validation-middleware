{
  "name": "fitbug/guzzle-swagger-validation-middleware",
  "description": "A guzzle middleware that can be used to validate if requests and responses match what is defined in the schema",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Billie Alice Thompson",
      "email": "billie.thompson@fitbug.com"
    }
  ],
  "require": {
    "fr3d/swagger-assertions": "^0.6.0",
    "php-http/message": "^1.3"
  },
  "require-dev": {
    "phpspec/phpspec": "^3.1",
    "friendsofphp/php-cs-fixer": "^2.0.0",
    "sllh/php-cs-fixer-styleci-bridge": "^2.1",
    "henrikbjorn/phpspec-code-coverage": "^3.0",
    "satooshi/php-coveralls": "dev-master"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-0": {
      "Fitbug": "src"
    }
  }
}
